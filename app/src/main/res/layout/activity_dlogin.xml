<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dlogn"
    android:orientation="vertical"
    tools:context=".DloginActivity"

    >

    <ImageButton
        android:id="@+id/BackButt"
        android:layout_width="79dp"
        android:layout_height="79dp"
        app:srcCompat="@drawable/dback"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:background="?android:selectableItemBackground"
        android:layout_marginStart="17dp"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="131dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/dtaxcoplogo"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="193dp" />

    <EditText
        android:id="@+id/id_email"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/dcustom_input"
        android:drawableStart="@drawable/dcustom_email_icon"
        android:drawableLeft="@drawable/dic_email"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        android:textColor="#263143"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="353dp" />

    <EditText
        android:id="@+id/id_pass"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@drawable/dcustom_input"
        android:drawableStart="@drawable/dcustom_lock_icon"
        android:drawableLeft="@drawable/dcustom_lock_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#263143" />

    <CheckBox
        android:id="@+id/showpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:buttonTint="#21AE94"
        android:text="Show Password"
        android:textColor="#21AE94" />

    <Button
        android:id="@+id/dbutton_loginone"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/dcustom_button_dark_blue"
        android:fontFamily="@font/norwester"
        android:gravity="center"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="119dp"

        tools:layout_editor_absoluteY="615dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_to_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawablePadding="12dp"
            android:fontFamily="@font/norwester"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginLeft="85dp"
            android:text="Forgot Password"
            android:textColor="#21AE94"
            android:textSize="17sp"
            app:backgroundTint="@null"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/btn_to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawablePadding="12dp"
            android:fontFamily="@font/norwester"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Register"
            android:textColor="#21AE94"
            android:textSize="17sp"
            app:backgroundTint="@null"
            app:iconTint="#FFFFFF" />
    </LinearLayout>

</LinearLayout>